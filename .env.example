# Server Configuration
HOST=0.0.0.0
PORT=8080
RUST_LOG=info

# Database
DATABASE_URL=postgresql://user:password@localhost/documents

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PRIORITY=doc.requests.priority
KAFKA_TOPIC_BULK=doc.requests.bulk

# S3/R2 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_DOCUMENTS=documents
S3_BUCKET_TEMP=temp-uploads
CDN_URL=https://cdn.example.com

# For R2 (Cloudflare)
# R2_ACCOUNT_ID=your_account_id
# R2_ACCESS_KEY_ID=your_r2_key
# R2_SECRET_ACCESS_KEY=your_r2_secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Processing Limits
MAX_SYNC_SIZE_BYTES=1048576       # 1MB
MAX_UPLOAD_SIZE_BYTES=104857600   # 100MB
SYNC_TIMEOUT_MS=5000

# Features
ENABLE_COMPRESSION=true

# Paths
TEMP_DIR=/tmp
TEMPLATE_DIR=templates